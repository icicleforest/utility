# Dependency: lib-datetime

# Function log_message
#   Arguments: $facility $message
#   Return: status code
#   Output: log-formatted message
log_message()
{
    local _facility="$1:" ; shift
    local _message="$@"
    local _datetime=""
    
    if type get_datetime > /dev/null 2>&1
    then
        _datetime="[$(get_datetime)]"
    fi

    echo "${_datetime}" "${_facility}" ${_message}
    return $?
}



# Function: log_info_message
#   Arguments: message
#   Return: status code
#   Output: log-formatted message
log_info_message()
{
    local _message="$@"
    
    log_message "INFO" "${_message}"
    return $?
}



# Function: log_warn_message
#   Arguments: message
#   Return: status code
#   Output: log-formatted message
log_warn_message()
{
    local _message="$@"

    log_message "WARN" "${_message}"
    return $?
}



# Function: log_err_message
#   Arguments: message
#   Return: status code
#   Output: log-formatted message
log_err_message()
{
    local _message="$@"

    log_message "ERR" "${_message}"
    return $?
}

